<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary mb-3">Issues Management</h1>
        <p class="lead text-muted mb-4">Gerencie suas issues de forma simples e eficiente</p>
        <%= link_to "Nova Issue", new_issue_path, class: "btn btn-primary btn-lg" %>
      </div>

      <!-- Issues Grid -->
      <div class="row g-4">
        <% @issues.each do |issue| %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <!-- Status Badge -->
              <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                <span class="badge <%= issue.status == 'open' ? 'bg-success' : issue.status == 'closed' ? 'bg-secondary' : 'bg-warning' %>">
                  <%= issue.status&.capitalize || 'Pendente' %>
                </span>
                <small class="text-muted">
                  <%= issue.created_at&.strftime("%d/%m/%Y") || "N/A" %>
                </small>
              </div>

              <!-- Card Content -->
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <%= truncate(issue.title, length: 60) %>
                </h5>
                
                <p class="card-text text-muted mb-3">
                  <%= truncate(issue.description, length: 120) %>
                </p>

                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-map-marker-alt text-primary me-2"></i>
                  <small class="text-muted">
                    <%= truncate(issue.location, length: 40) %>
                  </small>
                </div>
              </div>

              <!-- Actions -->
              <div class="card-footer bg-white border-0">
                <div class="d-flex gap-2">
                  <%= link_to "Ver", issue_path(issue), class: "btn btn-outline-primary btn-sm flex-fill" %>
                  <%= link_to "Editar", edit_issue_path(issue), class: "btn btn-outline-secondary btn-sm flex-fill" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Empty State -->
        <% if @issues.empty? %>
          <div class="col-12">
            <div class="text-center py-5">
              <i class="fas fa-clipboard-list text-muted mb-3" style="font-size: 3rem;"></i>
              <h4 class="text-muted">Nenhuma issue encontrada</h4>
              <p class="text-muted mb-4">Crie sua primeira issue para comeÃ§ar</p>
              <%= link_to "Criar Issue", new_issue_path, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>